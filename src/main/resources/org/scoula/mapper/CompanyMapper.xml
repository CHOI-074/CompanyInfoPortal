<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.mapper.CompanyMapper">

    <insert id="insertCompany" parameterType="CompanyDTO">
        INSERT INTO company (name, type, industry, url)
        VALUES (#{name}, #{type}, #{industry}, #{url});
    </insert>

    <select id="findAllCompanies" resultType="CompanyDTO">
        SELECT * FROM company;
    </select>

    <select id="findCompanyById" parameterType="long" resultType="CompanyDTO">
        SELECT * FROM company WHERE id = #{id};
    </select>

    <update id="updateCompany" parameterType="CompanyDTO">
        UPDATE company
        SET name = #{name}, type = #{type}, industry = #{industry}, url = #{url}
        WHERE id = #{id};
    </update>

    <delete id="deleteCompany" parameterType="long">
        DELETE FROM company WHERE id = #{id};
    </delete>

</mapper>
